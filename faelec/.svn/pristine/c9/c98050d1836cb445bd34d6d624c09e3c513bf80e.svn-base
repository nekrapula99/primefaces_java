			mostrarPestana();
			tabView=0;
			Mcotes00 mcotes00Rs = new Mcotes00();
			//mcotes00Rs = mcotes00Service.cargarDetalles(mcotes00.getIdctes());
			mcotes00.setMcotos001s(mcotes00Rs.getMcotos001s());	
